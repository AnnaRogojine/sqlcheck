<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/challenge_list_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <TextView
        android:id="@+id/txtName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenge name"
        android:textAlignment="center"
        android:textColor="#0e11d1"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgChallenge2"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtDays2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days Number"
        android:textAlignment="center"
        android:textColor="#0e11d1"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgChallenge2"
        app:layout_constraintTop_toBottomOf="@+id/txtName2"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtDisc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="#ce1309"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgChallenge2"
        app:layout_constraintTop_toBottomOf="@+id/txtDays2" />

    <ImageView
        android:id="@+id/imgChallenge2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>